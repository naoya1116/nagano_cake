<div class="container" style="position:relative;">
  <%= form_with model:@item, url:admin_item_path, method: :patch do |f| %>
    <div class="form-horizontal">
      <h4>商品編集</h4>

      <div class="col-xs-5">
    	  <div class="field">
         <%= attachment_image_tag(@item, :image, size: "300x217", fallback: "no_image.jpg") %>
         <%= f.attachment_field :image %>
    	  </div>
      </div>

      <div class="col-xs-7">
        <div class="field">
          <%= f.label :商品名 %>
          <%= f.text_field :name, class: "form" %>
        </div>

        <div class="field">
          <%= f.label :商品説明 %>
          <%= f.text_area :introduction %>
        </div>

        <div class="field">
          <%= f.label :ジャンル %>
          <%= f.collection_select(:genre_id, Genre.where(is_enabled: true), :id, :name, prompt: "選択してください") %>
        </div>

        <div class="field">
          <%= f.label :税抜価格 %>
          <%= f.text_field :price %>円
        </div>

        <div class="form-group">
          <label class="col-sm-2 control-label">販売ステータス</label>
          <%= f.select :is_active,{販売中:true, 販売停止:false}%>
        </div>

        <div class="actions">
          <label class="col-sm-2 control-label"></label>
          <%= f.submit "登録する", class:"btn btn-primary btn-md" %>
        </div>
      </div>
      <% end %>
</div>