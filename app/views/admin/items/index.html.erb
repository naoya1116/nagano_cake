<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-2">
      </br>
      <h2>商品一覧</h2>
      </br>

      <div class="row">
      <%= link_to new_admin_item_path,class: "btn btn-success btn-block",method: :get do %>
      新規商品登録
      <% end %>
      </div>

    </div>

    <div class="col-md-10 offset-md-1" >
      </br>
      <h2>Items</h2>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>商品画像</th>
              <th>商品名</th>
            </tr>
          </thead>
          <tbody>
          <% @items.each do |item| %>
          <tr>
           <td><%= attachment_image_tag item, :image,:fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %></td>
           <td><%= item.name %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
 </div>