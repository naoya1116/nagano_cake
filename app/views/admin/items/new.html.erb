<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-11 offset-md-1" >

      <h2 class="mt-3">商品新規登録</h2>
      <%= form_with model: @item, url: admin_items_path, local:true do |f| %>

        <div class="form-group">
          <lable for="item_name">Name</label>
          <%= f.text_field :name, class: "form-control" %>
        </div>

        <div class="form-group">
          <label for="item_image" >Image</label>
          <%= f.file_field :profile_image,class: "form-control-file" %>
        </div>

        <div class="form-group">
          <label for="item_introduction">Introduction</label>
          <%= f.text_area :introduction, class: "form-control" %>
        </div>

        <div class="form-group">
          <label for="item_price">price</label>
          <%= f.number_field :price, class: "form-control" %>
        </div>

        <div class="form-group">
          <label for="item_price">ジャンルの選択</label>
         <%= f.collection_select :genre_id, Genre.all, :id, :name %>
        </div>


        <div class="form-group">
          <%= f.submit '登録',class: "btn btn-success" %>
        </div>

      <% end %>

    </div>
  </div>
</div>


