    <!--   <%#= link_to toggle_admins_user_path(@user), method: :patch do %>-->
    <!--      <span class="btn btn-info">会員にする</span>-->
    <!--   <%# end %>-->
    <!--<%# else %>-->
    <!--   <%#= link_to toggle_admins_user_path(@user), method: :patch, data: { confirm: '本当に退会させますか？' } do %>-->
    <!--        <span class="btn btn-danger">退会させる</span>-->
    <!--   <%# end %>-->
    <!--<%# end %>-->
        <hr>
    <div class="btn-group" style="width: 50%; height: 100px; margin: 0 auto; display: block;">
      <%= link_to '会員詳細に戻る', admin_customer_path(@customer.id), class:"btn btn-default", style:"display:inline-block;" %>
      <%= f.submit "変更を保存する", class:"btn btn-success", style:"display:inline-block;" %>
    </div>

<% end %>

</div>