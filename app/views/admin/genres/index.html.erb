<div class="container px-5 px-sm-0">
<div class="row">
  <div class="col-md-3">
    </br>
    <h2>ジャンル管理画面</h2>
    </br>

    <h4 class="mt-3">ジャンル追加</h4>
    <%= form_with model: @genre, url: admin_genres_path, local:true do |f| %>

    <div class="form-group">
    <label for="genre_name">ジャンル名</label>
    <%= f.text_field :name, class: "form-control" %>
    </div>

    <div class="form-group">
    <%= f.radio_button :is_enabled, "true" %>
    <label for="genre_enabled">有効</label>
    </div>

    <div class="form-group">
    <%= f.radio_button :is_enabled, "false" %>
    <label for="genre_enabled">無効</label>
    </div>


    <div class="form-group">
      <%= f.submit 'ジャンルを追加する',class: "btn btn-primary" %>
    </div>

    <% end %>
  </div>

    <div class="col-md-8 offset-md-1" >
      </br>
      <h2>ジャンル一覧</h2>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>ジャンル名</th>
              <th>ステータス</th>
              <th></th>
            </tr>
          </thead>
          <tbody>
          <% @genres.each do |genre| %>
          <tr>
           <td><%= genre.name %></td>
           <td><% if genre.is_enabled == true %>
  							有効
				       <% else %>
   							無効
 					     <% end %>
 					</td>
           <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success' %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
 </div>