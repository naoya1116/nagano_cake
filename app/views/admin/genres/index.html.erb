<div class="container px-5 px-sm-0">
<div class="row">
  <div class="col-md-3">
    </br>
    <h2>ジャンル一覧</h2>
    </br>

    <h4 class="mt-3">ジャンル登録</h4>
    <%= form_with model:@genre, url:admin_genres_path, local:true do |f| %>

    <div class="form-group">
    <lable for="genre_name">ジャンル名</label>
      <input type="string" id="genre_name" name="genre[name]" class="form-control">
    </div>

    <div class="form-group">
      <input type="submit" class="btn btn-success" value="Create Genre" data-disable-with="Create Genre">
    </div>

    <% end %>
  </div>

    <div class="col-md-8 offset-md-1" >
      </br>
      <h2>Genres</h2>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>Genre_name</th>
              <th>登録日時</th>
              <th>更新日時</th>
            </tr>
          </thead>
          <tbody>
          <% @genres.each do |genre| %>
          <tr>
           <td><%= genre.name %></td>
           <td><%= genre.created_at.strftime("%Y-%m-%d %H:%M") %></td>
           <td><%= genre.updated_at.strftime("%Y-%m-%d %H:%M") %></td>
          </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
 </div>