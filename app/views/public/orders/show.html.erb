<h4>注文履歴詳細</h4>

	<h5>注文情報</h5>
<table class="table table-bordered ">
		<tr>
			<th>注文日</th>
			<td><%= @order.created_at.strftime('%Y年%m月%d日') %></td>
		</tr>
		<tr>
			<th>配送先</th>
			<td>
				〒<%= @order.postal_code %><br>
				<%= @order.address %><br>
				<%= @order.name %> 様
			</td>
		</tr>
		<tr>
			<th>支払い方法</th>
			<td><%= @order.payment_method %></td>
		</tr>
		<tr>
			<th>ステータス</th>
			<td><%= @order.status %></td>
		</tr>
</table>

<h5>注文内容</h5>
<table class="table table-bordered">
		<tr>
			<th>内訳</th>
			<td>
			  <% @order.ordered_items.each do |item| %>
				<%= item.name %> (<%= item.price %>円/個) ×<%= item.amount %>個＝ 円<br>
			  <% end %>
			</td>
		</tr>
</table>

<h5>請求情報</h5>
<table class="table table-bordered ">
	<tbody>
		<tr>
			<th>商品小計</th>
			<td><%= @total %>円</td>
		</tr>
		<tr>
			<th>配送料</th>
			<td>800円</td>
		</tr>
		<tr>
			<th>ご請求額</th>
			<td><%= @total_price + "800" %>円</td>
		</tr>
	</tbody>
</table>
<hr>
<%= link_to orders_path(@order.customer_id) do %>
	<span class="glyphicon glyphicon-chevron-left">注文履歴一覧に戻る</span>
<% end %>
</div>