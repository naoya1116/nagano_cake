<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-11 offset-md-1" >

<h2 class="mt-3">以下の詳細を確認してください</h2>


<dl>
	<dt>配送先宛名</dt>
	<dd><%= @order.name %></dd>
	<dt>配送先郵便番号</dt>
	<dd><%= @order.postal_code %></dd>
	<dt>配送先住所</dt>
	<dd><%= @order.address %></dd>
	<dt>支払い方法</dt>
	<dd><%= @order.payment_method %></dd>
</dl>

<%= form_with model: @order, method: :post, url: new_order_path do |f| %>
    <%= f.hidden_field :name %>
	<%= f.hidden_field :postal_code %>
	<%= f.hidden_field :address %>
	<%= f.hidden_field :payment_method %>
	<div class="form-group">
	<%= f.submit '入力画面に戻る', name: 'back', class: "btn btn-secondary" %>
	</div>
<% end %>

<%= form_with model: @order, method: :post, url: orders_complete_path do |f| %>
    <%= f.hidden_field :name %>
    <%= f.hidden_field :postal_code %>
	<%= f.hidden_field :address %>
	<%= f.hidden_field :payment_method %>
	<div class="form-group">
	<%= f.submit '確認しました', class: "btn btn-primary"%>
	</div>
<% end %>