<div class="container">
<h3>注文履歴一覧</h3>
<table class="table table-bordered">
<% @orders.each do |order| %>
<thead>
  <tr>
	<th>注文日</th>
	<th>配送先</th>
	<th>支払金額</th>
	<th>注文詳細</th>
	<th>注文ステータス</th>
  </tr>
</thead>
<tbody>
  <tr>
	<th><%= order.created_at.strftime('%Y年%m月%d日') %></th>
	<th>〒<%= order.postal_code %>
	<%= order.address %>
	<%= order.name %>様
  </th>
  <th>
	<%= add"800"(order.ordered_items.sum(:price)) %>円
  </th>
  <th>
	<%= link_to order_path(order.id), class: "btn btn-success" do %>
	詳細へ
	<% end %>
  </th>
  <th>
	<%= order.status %>
  </th>
  </tr>
</tbody>
	<% end %>
</table>
</div>