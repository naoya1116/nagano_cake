<h1>注文情報入力画面</h1>

<ol class="nav">
	<li class="current">1.入力</li>
	<li>2.確認</li>
	<li>3.完了</li>
</ol>

<%= form_with @order, method: :post, url: orders_confirm_path do |f| %>
	<dl>
		<dt>支払い方法</dt>
		<dd><%= f.text_field :payment_method %></dd>
		<dt>住所</dt>
		<dd><%= f.text_field :address %></dd>
	</dl>

	<%= f.submit '確認画面へ' %>
<% end %>