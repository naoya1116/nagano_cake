<h1 class="text-center">注文情報入力</h1>

<div class="mx-auto w-50 border rounded bg-white p-3">
<%= form_with  url: orders_confirm_path, method: :post, local: true do |f| %>

	<div class="form-group">
		<div class="lead">お支払方法</div>
			<p class="text">ご希望のお支払い方法を選択してください。</p>
		<div class="radio">
			<label><%= f.radio_button :payment_select, 0, checked: true  %>クレジットカード</label>
		</div>
		<div class="radio">
			<label><%= f.radio_button :payment_select, 1  %>銀行振込</label>
		</div>
	</div>

	<div class="form-group mt-4">
		<div class="lead">お届け先</div>
		<p class="text">ご希望のお届け先を選択してください。</p>

		  <div class="radio">
			<%= f.radio_button :address_select, 0, checked: "checked" %>
			<%= f.label :address_select, "ご自身の住所" %>
			</div>

			氏名：<%=current_customer.last_name %><%=current_customer.first_name %><br  />
			郵便番号:<%= current_customer.postal_code %><br  />
			住所:<%= current_customer.address %>

		  <div class="radio">
			<%= f.radio_button :address_select, 1 %>
			<%= f.label :address_select, "登録済み住所から選択" %>
			</div>

			<%= f.collection_select :deliver , @user.addresses, :id, :full_deliveries , :include_blank => "選択してください" %>

		  <div class="radio">
			<%= f.radio_button :address_select, 2 %>
			<%= f.label :address_select, "ご希望のお届け先を入力してください" %>
			</div>

      <div class="form-group has-icon">
			<%= f.label :name, "氏名:" %>
			<%= f.text_field :name %>
			</div>

			<div class="form-group has-icon">
			<%= f.label :postal_code, "郵便番号:" %>
			<%= f.text_field :postal_code %>
			</div>

		  <div class="form-group has-icon">
			<%= f.label :address, "住所:" %>
			<%= f.text_field :address %>
			</div>

      <div class="text">
			<%= f.submit "確認画面へ進む" , class:"btn btn-primary btn-block btn-base-1 mt-20" %>
			</div>

		<% end %>
	</div>