<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-11 offset-md-1" >

  <h1>お客様情報</h1>

  <table class="table">
  <tbody>
  <tr>
  <th>姓</th>
  <th><%= @customer.last_name %></th>
  </tr>
  <tr>
  <th>名</th>
  <th><%= @customer.first_name %></th>
  </tr>
  <tr>
  <th>姓カナ</th>
  <th><%= @customer.last_name_kana %></th>
  </tr>
  <tr>
  <th>名カナ</th>
  <th><%= @customer.first_name_kana %></th>
  </tr>
  <tr>
  <th>メールアドレス</th>
  <th><%= @customer.email %></th>
  </tr>
  <tr>
  <th>パスワード</th>
  <th>※非表示</th>
  </tr>
  <tr>
  <th>郵便番号</th>
  <th><%= @customer.postal_code %></th>
  </tr>
  <tr>
  <th>住所</th>
  <th><%= @customer.address %></th>
  </tr>
  <tr>
  <th>電話番号</th>
  <th><%= @customer.telephone_number %></th>
  </tr>
  </tbody>
  </table>

  <div class="row">
  <%= link_to customers_edit_path,class: "btn btn-outline-secondary btn-block" ,method: :get do%>
  <i class="fas fa-user-cog"></i> 登録情報編集
  <% end %>
  </div>

  <div class="row">
  <%= link_to orders_path,class: "btn btn-outline-secondary btn-block" ,method: :get do%>
  <i class="fas fa-history"></i> 注文履歴へ
  <% end %>
  </div>

    </div>
  </div>
</div>
