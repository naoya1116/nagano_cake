<div class="container px-5 px-sm-0">
  <div class="row">


    <div class="col-md-11 offset-md-1" >
      </br>
      <h2>Items</h2>
        <table class="table table-hover">
          <thead>
            <tr>
              <th>商品画像</th>
              <th>商品名</th>
            </tr>
          </thead>
          <tbody>
          <% @items.each do |item| %>
            <tr>
            <td><%= link_to item_path(item.id), method: :get do %>
               <%= attachment_image_tag item, :image,:fill, 40, 40, format: 'jpeg', fallback: "no_image.jpg" %>
               <% end %>
            </td>
            <td><%= item.name %></td>
            </tr>
          <% end %>
          </tbody>
        </table>
    </div>
  </div>
 </div>