<div class="container px-5 px-sm-0">
  <div class="row">

    <div class="col-md-11 offset-md-1" >
      <h2>買い物かご</h2>
      <table class="table table-hover">
        <thead>
          <tr>
            <th>商品画像</th>
            <th>商品名</th>
            <th>商品個数</th>
            <th></th>
            <th></th>
            <th colspan="5"></th>
          </tr>
        </thead>
        <tbody>
            <% @cart_items.each do |cart_item| %>
              <tr>
              <td><%= attachment_image_tag cart_item.item, :image, :fill, 50, 50, fallback: "no_image.jpg",size:'40x40' %></td>
              <td><%= cart_item.item.name %></td>
              <td><%= cart_item.amount %></td>
              <td>
                <%= form_with model: @cart_item, url: item_cart_items_path(cart_item.item_id)  do |f| %>
                <%= f.select :amount,options_for_select(1..10) %>
                <%= f.submit '数量の変更を確定'%>
                <% end %>
              </td>
               <td><%= link_to "削除", cart_item_path(cart_item.id), class: "btn btn-danger",method: :delete %></td>
              </tr>
            <% end %>
        </tbody>
      </table>

         <%= link_to "買い物を続ける", items_path, class: "btn btn-success" %>
         <%= link_to "購入手続きへ", new_order_path, class: "btn btn-success" %>
    </div>
  </div>
</div>